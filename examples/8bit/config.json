{
  "runner": {
    "id": "cpu",
    "label": "CPU (examples/8bit/hdl/cpu)",
    "order": 20,
    "topClassName": "RHDL::HDL::CPU::CPU",
    "requires": [
      "examples/8bit/hdl/cpu/cpu"
    ],
    "simIrPath": "./assets/fixtures/cpu/ir/cpu_lib_hdl.json",
    "explorerIrPath": "./assets/fixtures/cpu/ir/cpu_hier.json",
    "sourceBundlePath": "./assets/fixtures/cpu/ir/cpu_sources.json",
    "schematicPath": "./assets/fixtures/cpu/ir/cpu_schematic.json",
    "preferredTab": "ioTab",
    "preferredBackend": "compiler",
    "compilerWasmPath": "./assets/pkg/ir_compiler_cpu.wasm",
    "enableApple2Ui": false,
    "usesManualIr": false,
    "defaultBin": {
      "path": "./assets/fixtures/cpu/software/conway_glider_80x24.bin",
      "offset": 0,
      "space": "main",
      "startPc": 32,
      "resetAfterLoad": true
    },
    "timing": {
      "cyclesPerHertz": 1,
      "hertzLabel": "CPU"
    },
    "io": {
      "enabled": true,
      "api": "generic",
      "memory": {
        "dumpStart": 0,
        "dumpLength": 65536,
        "addressSpace": 65536,
        "viewMapped": true,
        "dumpReadMapped": true,
        "directWriteMapped": true
      },
      "display": {
        "enabled": true,
        "mode": "cpu8bit_text",
        "text": {
          "start": 2048,
          "width": 80,
          "height": 24,
          "rowStride": 80,
          "rowLayout": "linear",
          "charMask": 255,
          "asciiMin": 32,
          "asciiMax": 126
        }
      },
      "keyboard": {
        "enabled": true,
        "mode": "memory_mapped",
        "dataAddr": 254,
        "strobeAddr": 255,
        "strobeValue": 1,
        "strobeClearValue": 0,
        "upperCase": true,
        "setHighBit": false,
        "enterCode": 13,
        "backspaceCode": 8
      },
      "pcSignalCandidates": [
        "pc_out"
      ],
      "watchSignals": [
        "pc_out",
        "acc_out",
        "sp_out",
        "state_out",
        "zero_flag_out",
        "mem_addr",
        "mem_read_en",
        "mem_write_en",
        "halted"
      ]
    },
    "defaults": {
      "stepTicks": 100,
      "runBatch": 2000,
      "uiUpdateCycles": 2000
    }
  }
}
